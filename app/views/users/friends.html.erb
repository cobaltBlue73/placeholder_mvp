<div class="scrollable d-flex flex-column align-items-center">
    <%= render 'shared/search_bar' %>
  <div class="scrolling-wrapper-flexbox">
    <% @friends.each do |friend| %>
    <div class="card d-flex flex-column align-items-center">
      <div class="image">
        <%= cl_image_tag friend.avatars.first.photo.key, class: "model" %>
      </div>
      <p>@<%= friend.username %></p>
    </div>
    <% end %>
  </div>
</div>
