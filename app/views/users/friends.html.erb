<div class="header d-flex mt-4 mb-2 justify-content-center align-items-center">
  <h2>Friends</h2>
  <div class="import-button">
    <div class="camera-cart">
      <%= link_to camera_path :key => "" do %>
        <span class="camera"><i class="fas fa-camera fa-2x"></i></span>
      <% end %>
      <span class="counter"></span>
    </div>
  </div>
</div>

<div class="wrapper my-4">
  <%= render 'shared/search_bar' %>
</div>

<div class="scrollable pr-1 mt-3 d-flex flex-column align-items-center justify-content-center">
  <div class="scrolling-wrapper-flexbox">
    <% @friends.each do |friend| %>
    <div class="card d-flex flex-column align-items-center justify-content-around">
      <!-- <div class="image"> -->
        <span class="checkbox" data-key="<%= friend.avatars.first.photo.key %>"><i class="far fa-check-circle fa-2x"></i></span>
        <%= cl_image_tag friend.avatars.first.photo.key %>
      <!-- </div> -->
      <p>@<%= friend.username %></p>
    </div>
    <% end %>
  </div>
</div>
