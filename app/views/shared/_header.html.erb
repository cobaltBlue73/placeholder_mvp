<div class="header pt-3 pb-2 px-3 d-flex align-items-center justify-content-between">
  <% if current_page?(friends_path) %>
  <span class="top-left-icon"><%= image_tag "icons/android-icon-48x48.png", class: "mr-2" %><h2>Friends</h2></span>
  <div class="import-button top-right-icon camera-cart">
    <%= link_to camera_path :key => "" do %>
    <span class="camera">
      <i class="fas fa-camera fa-2x"></i>
      <span class="counter"></span>
    </span>
    <% end %>
  </div>
  <% else %>
    <% if current_page?(notifications_path) %>
      <span class="top-left-icon"><%= image_tag "icons/android-icon-48x48.png", class: "mr-2" %><h2>Notifications</h2></span>
    <% elsif current_page?(root_path) %>
      <span class="top-left-icon"><%= image_tag "icons/android-icon-48x48.png", class: "mr-2" %><h2>Community</h2></span>
    <% else %>
      <span class="top-left-icon"><%= image_tag "icons/android-icon-48x48.png", class: "mr-2" %><h2>Memory</h2></span>
    <% end %>

    <%= cl_image_tag current_user.avatars.last.photo.key, class: 'top-right-icon avatar dropdown-toggle avatar-display-photo avatar-md rounded-circle border', id: 'navbarDropdown', data: { toggle: 'dropdown' } %>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <!-- <a class="dropdown-item" href="<%= destroy_user_session_path %>" method="delete">Sign Out</a> -->

      <%= link_to 'Sign Out', destroy_user_session_path, method: 'delete', class: 'dropdown-item' %>
    </div>
  <% end %>
</div>



