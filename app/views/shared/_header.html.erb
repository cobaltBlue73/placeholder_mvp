<div class="header pt-4 pb-2 text-center">
  <% if current_page?(friends_path) %>
  <h2>Friends</h2>
  <div class="import-button top-right-icon camera-cart">
    <%= link_to camera_path :key => "" do %>
    <span class="camera">
      <i class="fas fa-camera fa-2x"></i>
      <span class="counter"></span>
    </span>
    <% end %>
  </div>
  <% else %>
    <% if current_page?(notifications_path) %>
      <h2>Notifications</h2>
    <% elsif current_page?(root_path) %>
      <h2>Community</h2>
    <% else %>
      <h2>Memory</h2>
    <% end %>
  <%= cl_image_tag current_user.avatars.last.photo.key, class: 'top-right-icon avatar dropdown-toggle avatar-display-photo avatar-md rounded-circle border mr-2', id: 'navbarDropdown', data: { toggle: 'dropdown' } %>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <!-- <a class="dropdown-item" href="<%= destroy_user_session_path %>" method="delete">Sign Out</a> -->

      <%= link_to 'Sign Out', destroy_user_session_path, method: 'delete', class: 'dropdown-item' %>
    </div>
  <% end %>
</div>



