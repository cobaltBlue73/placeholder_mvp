        <% @poses.each_with_index do |pose, idx| %>
            <%= cl_image_tag(pose, id: "pose_#{idx}",secure: true) %>
        <% end %>
    </a-assets>
    <% @poses.each_with_index do |pose, idx| %>
        <a-image src="<%= "#pose_#{idx}" %>"></a-image>
