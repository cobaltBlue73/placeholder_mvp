<div class="header pt-4 pb-2 text-center">
  <h2>Memory</h2>
</div>

<div class="wrapper memory-container">
  <div class="d-flex justify-content-between my-1">
    <div class="user d-flex align-items-center">
    <%= cl_image_tag @memory.user.avatars.last.photo.key, class: 'avatar-thumbnail rounded-circle border mr-2' %>
    <p>@<%= @memory.user.username %></p>
    </div>
    <div class="user d-flex align-items-center">
    <p><i class="fas fa-clock"></i></p>
    </div>
  </div>
  <%= cl_image_tag @memory.photo.key, class: 'memory-lg' %>
</div>
