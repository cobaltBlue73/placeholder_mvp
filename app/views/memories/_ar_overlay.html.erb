<div id="ar-overlay" data-controller="ar-overlay">
  <div class="selected-avatar"></div>
    <% avatars.each_with_index do |avatar, index| %>
      <button data-avatar-id="#avatar-<%=index%>" data-action="click->ar-overlay#getIndex">
        <%= cl_image_tag avatar, class: 'img-responsive', crossorigin: 'anonymous', width: 100, height: 150, crop: "scale" %>
      </button>
    <% end %>
  </div>
</div>
