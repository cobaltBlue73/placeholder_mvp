<!DOCTYPE html>
<html>
  <head>
    <title>Placeholder - Capture the best moments with your loved ones, even if you are apart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable"  content="yes">

    <!-- LinkedIn Open Graph data -->
    <meta property="og:title" content="<%= meta_title %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= meta_image %>" />
    <meta property="og:description" content="<%= meta_description %>" />
    <meta property="og:site_name" content="<%= meta_title %>" />

    <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
    <%= render 'shared/ios_pwa_links' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= javascript_pack_tag 'aframe-pack', 'data-turbolinks-track': 'reload', defer: false %>
  </head>


<body>
  <%= render 'shared/flashes' %>
  <%= yield %>

  <% unless current_page?(camera_path) || current_page?(new_user_session_path) %>
  <%= render 'shared/header' %>
  <% end %>

  <% unless current_page?(camera_path) || current_page?(new_user_session_path) %>
  <%= render 'shared/bottom_navbar' %>
  <% end %>
</body>

</html>
