<div class="form">
  <div class="form-head d-flex flex-column align-items-center mt-5">
  <h1>Placeholder</h1>
  <%= image_tag "icons/android-icon-96x96.png" %>
  <h3 class="mt-5 text-center">Capture the best moments with your loved ones, even if you are apart.</h3>
  </div>

<div class="form-login pt-1 mt-2">

  <div class="brand-slogan">Log in</div>
  <div class="form-body row d-flex justify-content-center">
    <div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn active w-100" %>
      </div>
      <% end %><br>

      <%= render "devise/shared/links" %><br>
    </div>
  </div>
</div>
</div>
